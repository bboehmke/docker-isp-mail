#!/bin/bash

DEBUG=${DEBUG:-$DEBUG_ENTRYPOINT}


## GENERAL
MAIL_SERVER_HOSTNAME=${MAIL_SERVER_HOSTNAME:-$(hostname)}
MAIL_POSTMASTER_ADDRESS=${MAIL_POSTMASTER_ADDRESS:-postmaster@localhost}


## SSL SETTINGS
SSL_KEY=${SSL_KEY:-mail.key}
SSL_CERT=${SSL_CERT:-mail.crt}
SSL_DH_PARAM_LENGTH=${SSL_DH_PARAM_LENGTH:-1024}


## DOVECOT
QUOTA_GRACE="10%%"
QUOTA_STORAGE=0
QUOTA_WARNING=90


## DATABASE
DB_TYPE=${DB_TYPE:-}
DB_HOST=${DB_HOST:-}
DB_PORT=${DB_PORT:-}
DB_NAME=${DB_NAME:-}
DB_USER=${DB_USER:-}
DB_PASS=${DB_PASS:-}
