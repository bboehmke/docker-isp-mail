#!/bin/bash

DEBUG=${DEBUG:-$DEBUG_ENTRYPOINT}


## GENERAL
SERVER_HOSTNAME=${SERVER_HOSTNAME:-$HOSTNAME}
MAILBOX_SIZE=${MAILBOX_SIZE:-0}
POSTMASTER_ADDRESS={$POSTMASTER_ADDRESS:-root}


## SSL SETTINGS
SSL_KEY=${SSL_KEY:-mail.key}
SSL_CERT=${SSL_CERT:-mail.crt}
SSL_DH_PARAM_LENGTH=${SSL_DH_PARAM_LENGTH:-1024}


## DATABASE
DB_TYPE=${DB_TYPE:-}
DB_HOST=${DB_HOST:-}
DB_PORT=${DB_PORT:-}
DB_NAME=${DB_NAME:-}
DB_USER=${DB_USER:-}
DB_PASS=${DB_PASS:-}
